---
import { Info } from "lucide-astro";
import { type CollectionEntry } from "astro:content";
import { SquareArrowOutUpRight } from "lucide-astro";

interface Props {
  entry: CollectionEntry<"personality-tests">;
}

const { entry } = Astro.props;

const { data } = entry;
const { Content } = await entry.render();
---

<div
  class="text-black dark:text-white space-y-2"
>
  <div class="flex justify-between">
    <p class="font-bold">{data.testName}</p>
    <a
      class="leading-none flex items-center text-xs border border-black/15 dark:border-white/20 rounded px-1.5 py-1"
      href={data.link}
      target="_blank"
      rel="nofollow"
    >
      Full Report
      <SquareArrowOutUpRight class="h-2.5 w-2.5 ml-1" />
    </a>
  </div>
  <article>
    <Content />
  </article>
  <div class="text-xs opacity-75 p-2 border rounded-lg flex gap-x-2 border-black/15 dark:border-block/20">
    <Info class="h-4 w-4 shrink-0"/>
    <p>{data.description}</p>
  </div>
</div>

<style>
  hr {
    @apply border-black/15 dark:border-white/20;
  }
</style>
